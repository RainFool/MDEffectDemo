<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="StatusProgressView">
        <attr name="nodesNum" format="integer" /> <!-- 节点数量 -->
        <attr name="nodeRadius" format="dimension" />
        <attr name="progressingDrawable" format="reference" /> <!--进行中节点图标-->
        <attr name="unReachedDrawable" format="reference" />  <!-- 未完成的节点图标 -->
        <attr name="reachedDrawable" format="reference" />
        <attr name="reachedLineColor" format="color" />
        <attr name="unreachedLineColor" format="color" />
        <attr name="lineHeight" format="dimension" />
        <attr name="currNodeNO" format="integer" />  <!-- 当前所到达的节点编号  0开始计算-->
        <attr name="currNodeState" format="integer" />  <!-- 当前所到达的节点状态，0：失败  1：成功 -->
    </declare-styleable>
</resources>