<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="StatusProgressView">
        <attr name="nodeNameArray" format="reference" />
        <attr name="nodeNameMarginTop" format="dimension" />
        <attr name="nodeNameTextSize" format="dimension" />
        <attr name="reachedNodeTextColor" format="color" />
        <attr name="unreachedNodeTextColor" format="color" />
        <attr name="progressingNodeTextColor" format="color" />
        <attr name="progressingTipTextColor" format="color" />
        <attr name="progressingTipTextSize" format="dimension" />
        <attr name="progressingTipText" format="string" />
        <attr name="nodesNum" format="integer" /> <!-- 节点数量 -->
        <attr name="nodeRadius" format="dimension" />
        <attr name="progressingDrawable" format="reference" /> <!--进行中节点图标-->
        <attr name="unReachedDrawable" format="reference" />  <!-- 未完成的节点图标 -->
        <attr name="reachedDrawable" format="reference" />
        <attr name="reachedLineColor" format="color" />
        <attr name="unreachedLineColor" format="color" />
        <attr name="lineHeight" format="dimension" />
        <attr name="curStep" format="integer" />  <!-- 当前所到达的节点编号  0开始计算-->
        <attr name="isDebugMode" format="boolean" />
    </declare-styleable>
</resources>